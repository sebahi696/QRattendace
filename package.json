{
  "name": "employee-qr-attendance",
  "version": "1.0.0",
  "description": "QR Code based Employee Attendance Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && (npm ci || npm install) && npm run build",
    "install-client": "cd client && npm install",
    "setup": "npm install && npm run install-client",
    "heroku-postbuild": "npm run build",
    "postinstall": "cd client && (npm ci || npm install)"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "qrcode": "^1.5.3",
    "moment": "^2.29.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
